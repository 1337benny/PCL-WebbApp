@model LoginViewModel
@{
    ViewBag.Titel = "Login";
}
<div asp-validation-summary="All" class="text-danger"></div>
<h1>Logga in</h1>
<form method="post" asp-action="LogIn">
    <div class="form-group row mb-3 text-end">
        <div class="col-sm-2">
            <label>Epost: </label>
        </div>
        <div class="col-sm-4">
            <input asp-for="Email" class="form-control" />
        </div>
    </div>
    <div class="form-group row mb-3 text-end">
        <div class="col-sm-2">
            <label>Lösenord: </label>
        </div>
        <div class="col-sm-4">
            <input type="password" asp-for="Password" class="form-control" />
        </div>
    </div>
    <div class="form-group row mb-3">
        <div class="offset-sm-2 col-sm-4 d-flex align-items-center">
            <label class="form-check-label">
                Kom ihåg mig
                <input type="checkbox" title="Remember me" asp-for="RememberMe" class="form-check-input ms-2" />
            </label>
        </div>
    </div>

    <div class="form-group row mb-3 text-end">
        <div class="offset-2 col-sm-4">
            <button type="submit" class="btn btn-primary">Login</button>
            <p class="mt-3">Har du inget konto? <a asp-action="Register">Registrera dig</a></p>

        </div>
    </div>


</form>


